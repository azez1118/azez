<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="w-full max-w-md bg-white p-8 rounded shadow">
    <h2 class="text-2xl font-semibold mb-6 text-center">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full mt-1 p-2 border rounded" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full mt-1 p-2 border rounded" %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, class: "block text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full mt-1 p-2 border rounded" %>
      </div>

      <div class="mb-6">
        <%= f.submit "Sign up", class: "w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700" %>
      </div>
    <% end %>

    <div class="text-sm text-center text-gray-600">
      <%= link_to "Already have an account? Log in", new_session_path(resource_name), class: "text-blue-600 hover:underline" %>
    </div>
  </div>
</div>

