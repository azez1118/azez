<div class="max-w-xl mx-auto p-4">
  <h1 class="text-2xl font-semibold mb-4">Edit Task</h1>

  <%= form_with(model: @task, local: true) do |form| %>
    <div class="mb-4">
      <%= form.label :title, class: "block text-gray-700 font-medium mb-1" %>
      <%= form.text_field :title, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div class="mb-4">
      <%= form.label :description, class: "block text-gray-700 font-medium mb-1" %>
      <%= form.text_area :description, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div class="mb-4">
      <%= form.label :due_date, class: "block text-gray-700 font-medium mb-1" %>
      <%= form.date_field :due_date, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div class="mb-4">
      <%= form.label :completed, class: "block text-gray-700 font-medium mb-1" %>
      <%= form.check_box :completed, class: "mr-2" %> Mark as completed
    </div>

    <div class="flex space-x-2">
      <%= form.submit "Update Task", class: "bg-blue-600 text-white px-4 py-2 rounded" %>
      <%= link_to "Cancel", dashboard_index_path, class: "text-gray-500 hover:underline" %>
    </div>
  <% end %>
</div>

