<div class="max-w-3xl mx-auto mt-16 p-6 bg-white rounded shadow">
  <h1 class="text-3xl font-bold mb-6 text-center">My Tasks</h1>

  <div class="mb-6 text-center">
    <%= link_to "New Task", new_task_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded" %>
  </div>

  <% if @tasks.any? %>
    <% @tasks.each do |task| %>
      <div class="border border-gray-200 rounded p-4 mb-4 bg-gray-50">
        <h2 class="text-xl font-semibold"><%= task.title %></h2>
        <p class="text-gray-600 mb-1"><%= task.description %></p>
        <p class="text-sm text-gray-500">Due: <%= task.due_date || "N/A" %></p>
        <p class="text-sm mt-1">
          Status: <%= task.completed? ? "✅ Done" : "❌ Not Done" %>
        </p>

        <div class="mt-3 flex space-x-4">
          <%= link_to "Edit", edit_task_path(task), class: "text-blue-600 hover:underline" %>
          <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:underline" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="text-gray-600 text-center">No tasks yet.</p>
  <% end %>
</div>

