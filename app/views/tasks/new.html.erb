<div class="max-w-xl mx-auto p-6 bg-white rounded shadow">
  <h1 class="text-2xl font-semibold mb-4">📝 New Task</h1>

  <%= form_with(model: @task, local: true) do |form| %>
    <div class="mb-4">
      <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :title, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div class="mb-4">
      <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :description, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div class="mb-4">
      <%= form.label :due_date, class: "block text-sm font-medium text-gray-700" %>
      <%= form.date_field :due_date, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div class="mb-4">
      <%= form.label :completed, "Mark as Done", class: "block text-sm font-medium text-gray-700" %>
      <%= form.check_box :completed, {}, true, false %>
    </div>

    <div class="flex space-x-4">
      <%= form.submit "Create Task", class: "bg-blue-600 text-white px-4 py-2 rounded" %>
      <%= link_to "Cancel", dashboard_index_path, class: "text-gray-500 hover:underline" %>
    </div>
  <% end %>
</div>

